  <script>
    // Menu data without prices
    const menuData = {
      "ü•ó Vegetarian Delights": [
        "Paneer Butter Masala",
        "Mixed Vegetable Curry", 
        "Dal Tadka",
        "Aloo Gobi",
        "Chana Masala"
      ],
      "üçñ Non-Vegetarian Specials": [
        "Chicken Curry",
        "Mutton Rogan Josh",
        "Fish Fry",
        "Prawn Masala",
        "Egg Curry"
      ],
      "ü•§ Refreshing Beverages": [
        "Mango Lassi",
        "Sweet Lime Soda",
        "Buttermilk",
        "Cold Coffee",
        "Masala Chai"
      ],
      "üç∞ Sweet Endings": [
        "Gulab Jamun",
        "Rasgulla",
        "Kheer",
        "Jalebi",
        "Ice Cream"
      ],
      "ü•ü Perfect Starters": [
        "Samosa",
        "Paneer Tikka",
        "Chicken Tikka",
        "Spring Rolls",
        "Papad"
      ]
    };

    // Discount structure constants
    const baseDiscount = 5;
    const participationDiscount = 2;
    const bonusDiscounts = {
      single: 5,
      friends: 10,
      family: 15
    };

    // State variables
    let selectedItems = new Set();
    let timerInterval = null;
    let timeLeft = 300; // 5 minutes in seconds
    let gameStarted = false;
    let gameCompleted = false;
    let customerType = "";

    // DOM elements
    const entryPhase = document.getElementById("entry-phase");
    const gamePhase = document.getElementById("game-phase");
    const completionPhase = document.getElementById("completion-phase");
    const startGameBtn = document.getElementById("start-game-btn");
    const timerDisplay = document.getElementById("timer");
    const menuCategoriesDiv = document.getElementById("menu-categories");
    const progressDisplay = document.getElementById("progress");
    const submitBtn = document.getElementById("submit-btn");
    const discountSummaryDiv = document.getElementById("discount-summary");
    const couponCodeDiv = document.getElementById("coupon-code");
    const couponDiscountDiv = document.getElementById("coupon-discount");
    const couponItemsDiv = document.getElementById("coupon-items");
    const couponSavingsDiv = document.getElementById("coupon-savings");
    const couponValidityDiv = document.getElementById("coupon-validity");
    const customerForm = document.getElementById("customer-form");
    const screenshotBtn = document.getElementById("screenshot-btn");

    // Add event listeners to dining type buttons
    const diningTypeButtons = document.querySelectorAll(".dining-btn");
    diningTypeButtons.forEach(button => {
      button.addEventListener("click", () => {
        // Remove selection from all buttons
        diningTypeButtons.forEach(btn => {
          btn.classList.remove("ring-4", "ring-white", "scale-110");
          btn.style.transform = "";
        });
        // Add selection style to clicked button
        button.classList.add("ring-4", "ring-white", "scale-110");
        button.style.transform = "scale(1.1)";
        
        // Set customerType based on button text
        const typeText = button.querySelector("p.font-bold").textContent.toLowerCase();
        if (typeText.includes('solo')) customerType = 'single';
        else if (typeText.includes('friends')) customerType = 'friends';  
        else if (typeText.includes('family')) customerType = 'family';
        
        startGameBtn.disabled = false;
        startGameBtn.classList.remove('pulse-glow');
        startGameBtn.classList.add('pulse-glow');
      });
    });

    // Start game button click handler
    startGameBtn.addEventListener("click", () => {
      if (!customerType) return;
      gameStarted = true;
      timeLeft = 300;
      selectedItems.clear();
      updateProgress();
      entryPhase.classList.add("hidden");
      gamePhase.classList.remove("hidden");
      completionPhase.classList.add("hidden");
      renderMenu();
      startTimer();
    });

    // Render menu categories and items
    function renderMenu() {
      menuCategoriesDiv.innerHTML = "";
      for (const [category, items] of Object.entries(menuData)) {
        const categoryDiv = document.createElement("div");
        categoryDiv.className = "category glass-effect border border-white/20 rounded-2xl p-6 shadow-lg category-card";
        
        const categoryTitle = document.createElement("h3");
        categoryTitle.textContent = category;
        categoryTitle.className = "text-2xl font-bold mb-6 text-center bg-gradient-to-r from-yellow-400 to-orange-400 bg-clip-text text-transparent";
        categoryDiv.appendChild(categoryTitle);
        
        const itemsGrid = document.createElement("div");
        itemsGrid.className = "space-y-3";
        
        items.forEach(item => {
          const itemDiv = document.createElement("div");
          itemDiv.className = "menu-item cursor-pointer rounded-xl px-4 py-3 select-none menu-item-hover bg-white/10 hover:bg-white/20 border border-white/20 text-center font-medium";
          itemDiv.textContent = item;
          itemDiv.addEventListener("click", () => toggleItemSelection(itemDiv, item));
          itemsGrid.appendChild(itemDiv);
        });
        
        categoryDiv.appendChild(itemsGrid);
        menuCategoriesDiv.appendChild(categoryDiv);
      }
    }

    // Toggle item selection
    function toggleItemSelection(itemDiv, item) {
      if (itemDiv.classList.contains("bg-gradient-to-r")) {
        itemDiv.className = "menu-item cursor-pointer rounded-xl px-4 py-3 select-none menu-item-hover bg-white/10 hover:bg-white/20 border border-white/20 text-center font-medium";
        selectedItems.delete(item);
      } else {
        itemDiv.className = "menu-item cursor-pointer rounded-xl px-4 py-3 select-none menu-item-hover bg-gradient-to-r from-green-500 to-emerald-500 text-white shadow-lg border border-green-400 text-center font-medium";
        selectedItems.add(item);
      }
      updateProgress();
    }

    // Update progress display and submit button state
    function updateProgress() {
      progressDisplay.textContent = `Items selected: ${selectedItems.size}`;
      submitBtn.disabled = selectedItems.size === 0;
    }

    // Start countdown timer
    function startTimer() {
      updateTimerDisplay();
      timerInterval = setInterval(() => {
        timeLeft--;
        updateTimerDisplay();
        if (timeLeft <= 0) {
          clearInterval(timerInterval);
          handleGameCompletion(false);
        }
      }, 1000);
    }

    // Update timer display in MM:SS format
    function updateTimerDisplay() {
      const minutes = Math.floor(timeLeft / 60).toString().padStart(2, "0");
      const seconds = (timeLeft % 60).toString().padStart(2, "0");
      timerDisplay.textContent = `${minutes}:${seconds}`;
      
      // Change color as time runs out
      if (timeLeft <= 60) {
        timerDisplay.className = "timer-circle bg-gradient-to-r from-red-600 to-red-700 text-white font-mono text-2xl px-6 py-3 rounded-2xl shadow-lg border border-red-500/50";
      } else if (timeLeft <= 120) {
        timerDisplay.className = "timer-circle bg-gradient-to-r from-yellow-500 to-orange-500 text-white font-mono text-2xl px-6 py-3 rounded-2xl shadow-lg border border-yellow-400/30";
      }
    }

    // Submit button click handler
    submitBtn.addEventListener("click", () => {
      if (!gameStarted) return;
      clearInterval(timerInterval);
      handleGameCompletion(true);
    });

    // Handle game completion scenarios
    function handleGameCompletion(submittedEarly) {
      gameCompleted = true;
      gameStarted = false;
      gamePhase.classList.add("hidden");
      completionPhase.classList.remove("hidden");

      // Calculate discount
      let discount = baseDiscount;
      let completionStatus = "No participation";
      if (selectedItems.size > 0) {
        if (submittedEarly || timeLeft > 0) {
          completionStatus = "‚úÖ Completed game within time";
          discount += bonusDiscounts[customerType] || 0;
        } else {
          completionStatus = "‚è∞ Started game but didn't complete within time";
          discount += participationDiscount;
        }
      }

      // Calculate total bill value (simulate prices for calculation)
      const prices = {
        "Paneer Butter Masala": 200,
        "Mixed Vegetable Curry": 180,
        "Dal Tadka": 150,
        "Aloo Gobi": 160,
        "Chana Masala": 170,
        "Chicken Curry": 250,
        "Mutton Rogan Josh": 350,
        "Fish Fry": 300,
        "Prawn Masala": 320,
        "Egg Curry": 220,
        "Mango Lassi": 80,
        "Sweet Lime Soda": 60,
        "Buttermilk": 50,
        "Cold Coffee": 90,
        "Masala Chai": 40,
        "Gulab Jamun": 100,
        "Rasgulla": 90,
        "Kheer": 110,
        "Jalebi": 95,
        "Ice Cream": 120,
        "Samosa": 70,
        "Paneer Tikka": 180,
        "Chicken Tikka": 250,
        "Spring Rolls": 150,
        "Papad": 40
      };
      let totalBill = 0;
      selectedItems.forEach(item => {
        totalBill += prices[item] || 0;
      });

      const savings = (totalBill * discount) / 100;

      // Generate unique coupon code
      const couponCode = generateCouponCode();

      // Display discount summary and coupon details
      discountSummaryDiv.innerHTML = `
        <div class="text-center space-y-3">
          <p class="text-xl"><strong>Status:</strong> ${completionStatus}</p>
          <p><strong>Dining Type:</strong> ${capitalize(customerType)} Experience</p>
          <p><strong>Items Selected:</strong> ${selectedItems.size} delicious items</p>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-6">
            <div class="bg-blue-500/20 rounded-xl p-4 border border-blue-400/30">
              <p class="text-lg font-bold text-blue-300">Total Discount</p>
              <p class="text-3xl font-black text-blue-100">${discount}%</p>
            </div>
            <div class="bg-green-500/20 rounded-xl p-4 border border-green-400/30">
              <p class="text-lg font-bold text-green-300">You Save</p>
              <p class="text-3xl font-black text-green-100">‚Çπ${savings.toFixed(2)}</p>
            </div>
          </div>
          <div class="mt-4 p-4 bg-purple-500/20 rounded-xl border border-purple-400/30">
            <p class="text-lg"><strong>Original Bill:</strong> ‚Çπ${totalBill.toFixed(2)}</p>
            <p class="text-2xl font-bold text-purple-200"><strong>Final Amount After Discount:</strong> ‚Çπ${(totalBill - savings).toFixed(2)}</p>
          </div>
        </div>
      `;
      
      couponCodeDiv.textContent = `${couponCode}`;
      couponDiscountDiv.textContent = `üéâ ${discount}% Discount Applied`;
    couponItemsDiv.innerHTML = `<strong>Valid For One Bill Only</strong>`;

      // couponItemsDiv.textContent = `Valid for ${selectedItems.size} selected items`;
      // couponSavingsDiv.textContent = `üí∞ Total Savings: ‚Çπ${savings.toFixed(2)}`;
      couponValidityDiv.textContent = `‚è∞ Valid Until: ${getValidityDate()}`;

      // Reset form
      customerForm.reset();
    }

    // Generate a unique coupon code (random alphanumeric 8 chars)
    function generateCouponCode() {
      const chars = "ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789";
      let code = "RR";
      for (let i = 0; i < 6; i++) {
        code += chars.charAt(Math.floor(Math.random() * chars.length));
      }
      return code;
    }

    // Get validity date 7 days from now
    function getValidityDate() {
      const now = new Date();
      now.setDate(now.getDate() + 7);
      return now.toLocaleDateString('en-US', { 
        weekday: 'long', 
        year: 'numeric', 
        month: 'long', 
        day: 'numeric' 
      });
    }

    // Capitalize first letter
    function capitalize(str) {
      if (!str) return "";
      return str.charAt(0).toUpperCase() + str.slice(1);
    }

    // Handle customer form submission to send coupon via WhatsApp
    customerForm.addEventListener("submit", (e) => {
      e.preventDefault();
      const name = customerForm["customer-name"].value.trim();
      const whatsapp = customerForm["customer-whatsapp"].value.trim();
      if (!name || !whatsapp) {
        alert("Please enter your name and WhatsApp number.");
        return;
      }
      
        const message = encodeURIComponent(
  `Hello ${name}!\n\n` +
  `Here‚Äôs your exclusive Royal Ruchulu Restaurant discount coupon:\n\n` +
  `Coupon Code: ${couponCodeDiv.textContent}\n` +
  `Discount: ${couponDiscountDiv.textContent}\n` +
  `Valid Until: ${getValidityDate()}\n\n` +
  `Address:\n45-58-5/10, behind Port Stadium,\nNarasimhanagar, Akkayyapalem,\nVisakhapatnam, Andhra Pradesh 530024\n\n` +
  `Present this coupon when you visit us!\n\n` +
  `Royal Ruchulu ‚Äì Where Every Meal is Royal!`
);



      const whatsappUrl = `https://wa.me/${whatsapp.replace(/\D/g, "")}?text=${message}`;
      window.open(whatsappUrl, "_blank");
    });

    // Screenshot coupon button handler
    screenshotBtn.addEventListener("click", async () => {
      try {
        const canvas = await html2canvas(document.getElementById("coupon"), {
          backgroundColor: '#ffffff',
          scale: 2,
          logging: false,
          useCORS: true
        });
        const link = document.createElement("a");
        link.download = `royal_ruchulu_coupon_${generateCouponCode()}.png`;
        link.href = canvas.toDataURL('image/png');
        link.click();
      } catch (error) {
        alert("Failed to capture screenshot. Please try again.");
        console.error("Screenshot error:", error);
      }
    });

    // Add some interactive effects
    document.addEventListener('DOMContentLoaded', function() {
      // Add floating animation delay to background elements
      const floatingElements = document.querySelectorAll('.floating-animation');
      floatingElements.forEach((el, index) => {
        el.style.animationDelay = `${index * 0.5}s`;
      });
    });

    // Add particle effect for better visual appeal
    function createParticle() {
      const particle = document.createElement('div');
      particle.className = 'absolute w-2 h-2 bg-yellow-400 rounded-full opacity-70';
      particle.style.left = Math.random() * 100 + '%';
      particle.style.top = '100%';
      particle.style.animation = 'float-up 8s linear infinite';
      document.body.appendChild(particle);
      
      setTimeout(() => {
        particle.remove();
      }, 8000);
    }

    // Create floating particles periodically
    setInterval(createParticle, 2000);

    // Add CSS for particle animation
    const style = document.createElement('style');
    style.textContent = `
      @keyframes float-up {
        0% {
          transform: translateY(0) scale(0);
          opacity: 0;
        }
        10% {
          opacity: 0.7;
          transform: scale(1);
        }
        90% {
          opacity: 0.7;
          transform: scale(1);
        }
        100% {
          transform: translateY(-100vh) scale(0);
          opacity: 0;
        }
      }
    `;
    document.head.appendChild(style);
  </script>
</body>
</html>
