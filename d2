              <label for="customer-name" class="block mb-2 font-bold text-gray-700">Full Name:</label>
              <input type="text" id="customer-name" name="customer-name" required class="w-full border-2 border-yellow-300 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent transition-all duration-300" placeholder="Enter your name" />
            </div>
